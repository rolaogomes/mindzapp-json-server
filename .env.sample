# ======================
# MindZapp - .env.sample
# ======================

# Ambiente
NODE_ENV=development
PORT=4321
PUBLIC_BASE_URL=http://localhost:4321

# CORS
# Em produção, separa por vírgulas: https://app.tld,https://admin.tld
CORS_ORIGIN=http://localhost:4321

# E-mail
MAIL_FROM="MindZapp <mindzapp@localhost>"

# Opção A: URL única (ex.: smtp://user:pass@smtp.host:587)
SMTP_URL=

# Opção B: Campos separados (usa se não definires SMTP_URL)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
# 1 = validar certificado TLS (prod). 0 = aceitar self-signed (dev)
SMTP_TLS_REJECT_UNAUTHORIZED=1

# Mail behavior
# 1 = falhar envio em prod/dev; 0 = não lançar erro (loga apenas)
MAIL_STRICT=0
# 1 = logar envios; 0 = silencioso
MAIL_LOG=1

# Auth / Segurança
# TTLs padrão: verificação (24h), reset (30m)
VERIFY_TTL_SEC=86400
RESET_TTL_SEC=1800
# Custo do bcrypt (10 dev, 12+ prod)
BCRYPT_COST=10

# Logging da app (podes pôr "debug" em dev)
LOG_LEVEL=debug
